{
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.js", "src/**/*.vue"],
	"module": "esnext",
	"compilerOptions": {
        "types": ["./src/global.d.ts"],
		"target": "esnext",
		"declaration": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"allowJs": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"emitDeclarationOnly": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "types",
		"declarationMap": true
	}
}
